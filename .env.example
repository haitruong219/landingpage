# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=landingpage
POSTGRES_PORT=5432
# DATABASE_URL: For local development (uses localhost)
# In Docker, hostname will be automatically changed to 'postgres'
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/landingpage?schema=public

# App
APP_PORT=3000
NODE_ENV=production

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here-change-this
NEXTAUTH_URL=http://localhost:3000

# SMTP Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Admin
ADMIN_EMAIL=

# Webhook (Optional)
WEBHOOK_URL=

# Next.js Public
NEXT_PUBLIC_ADMIN_SUBDOMAIN=admin
